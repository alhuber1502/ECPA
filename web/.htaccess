ErrorDocument 403 /errors/403error.shtml
ErrorDocument 404 /errors/404error.shtml
ErrorDocument 500 /errors/500error.shtml
<Files ~ "^\.ht">
<IfModule mod_authz_core.c>
    Require all denied
</IfModule>
<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
</IfModule>
</Files>
IndexIgnore *
Options -Indexes +FollowSymLinks
<IfModule mod_authz_core.c>
    Require all granted
</IfModule>
<IfModule !mod_authz_core.c>
    Order allow,deny
    Allow from all
</IfModule>
